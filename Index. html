<script>

const zones = {
1:["Kitchen","Clear counters","Dishwasher","Wipe surfaces","Fridge check","Vacuum","Mop"],
2:["Living & Dining","Clear clutter","Wipe tables","Straighten sofa","Vacuum","Mop"],
3:["Bathrooms","Clean toilet","Wipe sink","Shower spray","Vacuum","Mop"],
4:["Bedroom","Change bedding","Clothes away","Clear bedside","Vacuum","Mop"],
5:["Hall & Stairs","Shoes & coats","Clear surfaces","Banister","Vacuum","Mop"],
6:["Garden/Bonus","Sweep","Tidy garden","Bins"],
0:["Reset","Light tidy","Laundry reset","Relax"]
};

const day=new Date().getDay();
const zone=zones[day];

document.getElementById("zoneTitle").innerText="ðŸŽ¯ "+zone[0];

zone.slice(1).forEach(t=>{
let li=document.createElement("li");
li.innerHTML='<input type="checkbox"> '+t;
document.getElementById("zoneList").appendChild(li);
});

["Bed","Laundry","Rubbish","Bathroom wipe","Kitchen reset"]
.forEach(t=>{
let li=document.createElement("li");
li.innerHTML='<input type="checkbox"> '+t;
document.getElementById("morning").appendChild(li);
});

["Dishes","Rubbish","Tidy room","Put items back"]
.forEach(t=>{
let li=document.createElement("li");
li.innerHTML='<input type="checkbox"> '+t;
document.getElementById("evening").appendChild(li);
});

